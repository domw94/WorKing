<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="WkButtonDefault" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WkButtonLight" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="WkButtonLightSecond" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
    </style>

    <style name="WkButtonTransparent" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="WkSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:background">@android:color/white</item>
    </style>


</resources>
